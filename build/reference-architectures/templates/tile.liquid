<!-- {{ card.title }} -->
<li style="display: flex; flex-direction: column;">
    <a href="{{ card.url }}" style="display: flex; flex-direction: column; flex: 1 0 auto;">
        <div class="cardSize" style="flex: 1 0 auto; display: flex;">
            <div class="cardPadding" style="display: flex;">
                <div class="card">
                    <div class="cardImageOuter">
                        <div class="cardImage">
                            <img src="{{ card.image }}" height="140px" />
                        </div>
                    </div>
                    <div class="cardText">
                        <h3>{{ card.title }}</h3>
                        <p>{{ card.summary }}</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</li>