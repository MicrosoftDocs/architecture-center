<!-- {{ x.title }} -->
<li style="display: flex; flex-direction: column;">
    <a href="{{ x.url }}" style="display: flex; flex-direction: column; flex: 1 0 auto;">
        <div class="cardSize" style="flex: 1 0 auto; display: flex;">
            <div class="cardPadding" style="display: flex;">
                <div class="card">
                    <div class="cardImageOuter">
                        <div class="cardImage">
                            <img src="{{ x.image }}" height="140px" />
                        </div>
                    </div>
                    <div class="cardText">
                        <h3>{{ x.title }}</h3>
                        <p>{{ x.summary }}</p>
                    </div>
                </div>
            </div>
        </div>
    </a>
</li>